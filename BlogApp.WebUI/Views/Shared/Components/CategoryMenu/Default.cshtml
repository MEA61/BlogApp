@model IEnumerable<Category>

<div class="list-group">
    <a asp-controller="Blog" asp-action="Index" class="list-group-item">All Categories</a>
    @foreach (var item in Model)
    {
        <a asp-controller="Blog" asp-action="Index" asp-route-id="@item.CategoryId"
           class="list-group-item @(ViewBag.SelectedCategory==item.CategoryId.ToString()?"active":"")">
            @item.Name
        </a>
    }


</div>